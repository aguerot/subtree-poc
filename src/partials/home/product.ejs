<div class="masonry__brick" data-aos="fade-up">
    <div class="item-folio" itemscope itemtype="http://schema.org/Product">
        <div class="item-folio__thumb">
            <a href="<%=product.detailsImage%>" class="thumb-link" title="<%=product.title%>" data-size="800x1200">
                <img src="<%=product.smallImage%>" alt="" itemprop="image">
            </a>
        </div>
        <div class="item-folio__text">
            <h3 class="item-folio__title" itemprop="name">
                    <%=product.title%>
            </h3>
            <p class="item-folio__cat">
                    <%=product.category%>
            </p>
        </div>
        <a href="<%=product.seeMoreUrl%>" class="item-folio__project-link" title="<%=product.seeMoreTitle%>">
            <i class="icon-link"></i>
        </a>
        <div class="item-folio__caption">
            <p itemprop="description"><%=product.caption%></p>
        </div>
    </div>
</div>